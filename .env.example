# Server Configuration
PORT=3000

# MongoDB Configuration
# Example for MongoDB Atlas: mongodb+srv://<user>:<password>@cluster.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGODB_URI=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-with-at-least-32-characters
JWT_EXPIRES_IN=7d

# Email Service Configuration (using Nodemailer with Gmail as an example)
# Note: For Gmail, you might need to use an "App Password"
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Application Logic
MESSAGE_ROAMING_DAYS=7
